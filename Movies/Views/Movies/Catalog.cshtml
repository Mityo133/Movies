@model IEnumerable<Movies.Models.Movie>

@{
    ViewData["Title"] = "Catalog";
}
<form asp-action="Catalog" asp-controller="Movies" method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-4">
            <input type="text" name="nameFilter" value="@Context.Request.Query["nameFilter"]" class="form-control" placeholder="Search by name" />
        </div>
        <div class="form-group col-md-3">
            <input type="number" name="yearFilter" value="@Context.Request.Query["yearFilter"]" class="form-control" placeholder="Year" />
        </div>
        <select  id="cars" name="sortbyName" class="form-control">
  <option value="volvo">Yes</option>
  <option value="No">No</option>
 
</select>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>


<div class="cat">

    <table class="table">
        <thead>
            <tr>
                <th>
                    <h1 style="color:white;">Films</h1>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="container">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-sm-2 mb-4">
                                    <!-- Added mb-4 for margin-bottom -->
                                    <!-- Bootstrap column for grid layout -->
                                    <a asp-action="Details" asp-controller="Movies" asp-route-id="@item.Id">
                                        <img src="@item.Image" alt="Movie Image" class="img-fluid" style="width:100%; height: auto; border-radius: 8px;" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
