@model IEnumerable<Movies.Models.Movie>

@{
    ViewData["Title"] = "Catalog";
}
<form asp-action="Catalog" asp-controller="Movies" method="get" class="mb-4 form">
    <div class="form-row">
        <div class="form-group col-md-4">
            <input type="text" name="nameFilter" value="@Context.Request.Query["nameFilter"]" class="form-control" style="width:300px;"placeholder="Search by name" />
        </div>
        <div class="form-group col-md-3">
            <input type="number" name="yearFilter" value="@Context.Request.Query["yearFilter"]" class="form-control" style="width:300px;" placeholder="Year" />
        </div>
        <select id="OptionToSortBy" name="OptionToSortBy" style="width:300px;" class="form-control">
            <option value="" disabled selected>Choose an option to sort by</option>
            <option value="AZ">A-Z</option>
            <option value="ZA">Z-A</option>
            <option value="Year-De">Year-Descending</option>
            <option value="Year-Ac">Year-Ascending</option>
            <option value="Low-Rating">Lowest Ratings</option>
            <option value="High-Rating">High Rating</option>
        </select>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>


<div class="cat">

    <table class="table">
        <thead>
            <tr>
                <th>
                    <h1 style="color:white;">Films</h1>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="container">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-sm-2 mb-4 movie-poster">
                                    <!-- Added mb-4 for margin-bottom -->
                                    <!-- Bootstrap column for grid layout -->
                                    <a asp-action="Details" asp-controller="Movies" asp-route-id="@item.Id">
                                        <img src="@item.Image" alt="Movie Image" class="img-fluid" style="width:100%; height: auto; border-radius: 8px;" />
                                    </a>
                                    <h3 class="text-white">@item.Name</h3>
                                    <h3 class="text-white">@item.Ratings</h3>
                                </div>
                               
                            }
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>