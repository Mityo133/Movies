﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Movies.styles.css" asp-append-version="true" />

</head>
<body>

    <header style ="font-family:'MyFont'; color:white;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3 bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand bot" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-clipboard-fill"></i>
                    Movies</a>
                <button class="navbar-toggler bot" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center container">
                    <div class="align-items-center">
                        <!-- Remove the 'align-items-lg-center' and just use 'align-items-center' to vertically center -->
                        <ul class="navbar-nav flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link bot" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door-fill"></i> Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link bot" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="bi bi-lock-fill"></i> Privacy
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link bot" asp-area="" asp-controller="Movies" asp-action="Catalog"><i class=""></i>Movies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link bot" asp-area="" asp-controller="Actors" asp-action="ActorsList">Actors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link bot" asp-area="" asp-controller="Genres" asp-action="Catalog">Genres</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <partial name="_LoginPartial" />
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
